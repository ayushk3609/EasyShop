<%- include("partials/header") %>


<%- include("partials/flash") %>


<div class="container w-25 mt-5">
	<div class="row">
		<div class="col-md-12 ">
			<form action="/reset/<%=token%>?_method=PUT" method="POST">
				<h5 class="display-6 text-center ">Reset Password</h5>
				<div class="form-group mt-5">
					<label for="password">New Password</label>
					<input type="password" name="password" autofocus placeholder="Enter you new password" class="form-control w-100 mt-2">
				</div>
				<div class="form-group mt-3">
					<label for="confirm">Confirm Password</label>
					<input type="password" name="confirm" autofocus placeholder="Confirm your new password" class="form-control w-100 mt-2">
				</div>
				<div class="form-group mt-4 text-center">
					<input type="submit" class="btn btn-sm btn-primary" value="Update password">
				</div>
			</form>
		</div>
	</div>
</div>




<%- include("partials/footer") %>