<style>
  .fontnav{
    font-family: 'Noto Sans', sans-serif;
  }
  .li :hover{
    background-color: rgba(160, 170, 170, 0.301);
  }
  .ext a:hover{
    background-color: rgba(160, 170, 170, 0.301);
  }
</style>




<nav class="navbar navbar-expand-lg navbar-dark " style="background-color: #03045e;">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand" href="/products" style="font-family: 'Federant', cursive; font-size: 1.5rem;"><i class="fab fa-opencart me-2" style="font-size: 2rem;"></i>EasyShop</a>
    <div class="collapse navbar-collapse fontnav" id="navbarTogglerDemo03">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item li">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item li">
          <a class="nav-link active" href="/products">Products</a>
        </li>
        <% if(currentUser){ %>
          <% if(currentUser.role === "Retailer"){ %>
          <li class="nav-item li">
              <a class="nav-link active" href="/products/new" tabindex="-1" aria-disabled="true">New</a>
          </li>
          <% } %>
        <% } %>
      </ul>

      <div class="navbar-nav ml-auto ext">
        <% if(!currentUser){ %>
        <a class="nav-link active " aria-current="page" href="/login">Login</a>
        <a class="nav-link active " aria-current="page" href="/register">Register</a>
        <% }else{ %>
          <a class="nav-link active text-capitalize li" aria-current="page" href="/user/<%= currentUser._id %>/me">Hello, <%= currentUser.username %></a>
          <a href="/user/<%=currentUser._id %>/cart" class="nav-link active"><i class="fas fa-shopping-cart fs-5"><sup><span class="badge bg-danger"><%= currentUser.cart.length  %></span></sup></i></a>
          <a class="nav-link active " aria-current="page" href="/logout"><i class="fas fa-sign-out-alt fs-5 ms-2"></i></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>