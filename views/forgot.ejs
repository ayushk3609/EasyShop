<%- include("partials/flash") %>

<div class="container w-25 mt-5">
	<div class="row">
		<div class="col-md-12 ">
			<form action="/forgotpassword?_method=PUT" method="POST">
				<h5 class="display-6 text-center ">Forgot Password</h5>
				<div class="form-group mt-5">
					<label for="email">Email</label>
					<input type="email" name="email" autofocus placeholder="Enter you registered email-id" class="form-control w-100 mt-2">
				</div>
				<div class="form-group mt-4 text-center">
					<input type="submit" class="btn btn-sm btn-primary" value="Reset Password">
				</div>
			</form>
		</div>
	</div>
</div>










