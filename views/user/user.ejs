<%- include("../partials/header")  %>
<%- include("../partials/navbar")  %>

<link rel="stylesheet" href="/css/userprofile.css">

<div class="container">
        <div class="main">
            <div class="row">
                <div class="col-md-4 mt-1">
                    <div class="card text-center sidebar">
                        <div class="card-body">
                           <% if(!currentUser.profileImage){ %>
                            <img src="https://bellfund.ca/wp-content/uploads/2018/03/demo-user.jpg" class="rounded-circle" width="280px">
                           <% }else { %>
                            <img src="<%= currentUser.profileImage  %>" class="rounded-circle" width="280px">
                            <% } %>
                            <div class="mt-3">
                                <h3><%= currentUser.firstName  %>&nbsp;<%= currentUser.lastName  %></h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 mt-1">
                    <div class="card mb-3 content">
                        <h1 class="m-3 pt-3">About</h1>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Full name</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= currentUser.firstName  %>&nbsp;<%= currentUser.lastName  %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Email</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= currentUser.email %>
                                </div>
                            </div>
                        
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Mobile number</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= currentUser.mobNo  %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Address</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= currentUser.Address  %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-3 content">
                        <h1 class="m-3">Recent Orders</h1>
                        <div class="card-body">
                            <div class="row">
        
                                <%for(let order of orders){%>
                                    <div class="col-lg-12">
                                        <div class="card" style="width: 100%;margin: 2px auto;">
                                            <h5 class="card-header">
                                                <p>Total : 	&#8377 <%=order.amount%></p>
                                                <p class="fw-light fs-6">Transaction Id : <%= order.txnid%> </p>
                                                <p class="fw-light fs-6">Order Date : <%= order.date.toDateString() %> </p>
                                            </h5>
                                            <div class="card-body">
                                                <% for(let item of order.orderedProducts){ %>
                                                    <div class="card mb-3" style="max-width: 720px;width: 100%;">
                                                        <div class="row g-0">
                                                        <div class="col-md-4">
                                                            <img style="width: 200px;height:200px" src="<%=item.image%>" alt="...">
                                                        </div>
                                                        <div class="col-md-8">
                                                            <div class="card-body">
                                                            <h6 class="card-title"><%=item.name%></h6>
                                                            <a href="/products/<%=item._id%>" class="btn btn-info btn-sm">Buy it again</a> 
                                                            </div>
                                                        </div>
                                                        </div>
                                                    </div>
                                                <%}%> 
                                            </div>
                                        </div>
                                    </div>
                                <%}%>
                           </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>












<%- include("../partials/lfoot")  %>

<%- include("../partials/footer")  %>