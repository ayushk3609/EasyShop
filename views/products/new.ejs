<%- include("../partials/header")  %>
<%- include("../partials/navbar")  %>


<div class="container" style="margin-top: 3rem; width: 80vw;">

    <form class="validated-form" action="/products" method="POST" style="max-width: 70%;margin: 10px auto;" novalidate>
        <div class="mb-3 mt-3">
            <label for="image" class="form-label"> Image url</label>
            <input type="text" class="form-control" id="image" placeholder="Product Image URL" name="product[image]" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
        <div class="mb-3 mt-2">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Product Name" name="product[name]" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3 mt-3">
          <label for="price" class="form-label">Price in INR.</label>
          <input type="number" class="form-control" id="price" placeholder="Price in â‚¹" name="product[price]" required>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please provide a valid Price.
          </div>
        </div>
        <div class="mb-3 mt-2">
          <label for="retailName" class="form-label">Retailer Name</label>
          <input type="text" class="form-control" id="retailName" placeholder="Enter Your User Name" name="product[retailName]" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-5 mt-2">
            <label for="desc" class="form-label">Description</label>
            <textarea name="product[desc]" class="form-control" placeholder="Description" id="desc" cols="30" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>

</div>









